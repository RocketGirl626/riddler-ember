<h1>{{title}}</h1>

{{#if isEditing}}

<form>
  <div class="form-group">
    <label for="title">Title</label>
    {{input id="title" class="form-control" value=title}}
  </div>

  <div class="form-group">
    <label for="body">Body</label>
    {{textarea id="body" rows="15" class="form-control" value=body}}
  </div>
  <button class="btn btn-primary" {{action 'save'}}>Save</button>
</form>

{{else}}

<p>{{body}}</p>
<button class="btn btn-primary" {{action 'edit'}}>Edit</button>
<button class="btn btn-danger" {{action 'delete'}}>Delete</button>

{{/if}}

<h2>Answers</h2>

{{#each answers}}
<p>{{text}}</p>
{{/each}}

<p>{{#link-to 'new-answer' this.id class="btn btn-primary"}}New Answer {{/link-to}}</p>

{{outlet}}
